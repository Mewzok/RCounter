<Window x:Class="RCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCounter"
        mc:Ignorable="d"
        Title="Reset Counter" Height="200" Width="350">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF79B5F3" Offset="0"/>
                <GradientStop Color="#FFCEE6FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Resets:" Margin="113.5,10,113.5,0" VerticalAlignment="Top" Width="115" Height="47" FontFamily="Power Red and Green" FontSize="36" HorizontalAlignment="Center"/>
        <Label Name="NumLabel" Content="0" Margin="137,57,137,67" FontFamily="Power Red and Green" FontSize="24"/>
        <Button Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="114,129,0,0" VerticalAlignment="Top" Width="114" Height="30" FontSize="18" FontFamily="Power Red and Green" Click="ResetButton_Click"/>

    </Grid>
</Window>
